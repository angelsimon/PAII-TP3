<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido/a a Parking System"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/titleColor" />

            <TextView
                android:id="@+id/lblMail_Nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicia sesión para empezar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="169dp"
                android:layout_height="163dp"
                android:visibility="visible"
                app:srcCompat="@drawable/car_parking_1"
                tools:srcCompat="@drawable/car_parking_1"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="383dp"
                android:layout_height="52dp"
                android:ems="10"
                android:hint="Nombre de usuario"
                android:inputType="textPersonName"
                android:maxLength="36" />

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="383dp"
                android:layout_height="46dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="8" />

            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="btnIniciar_Click"
                android:text="INICIAR SESIÓN" />

            <TextView
                android:id="@+id/lnkRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnRegistrarse_Click"
                android:text="Registrarse"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/titleColor"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>